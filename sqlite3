import os
import sqlite3
from config import Config

class Database(object):

    def __init__(self, db_file_path) -> None:
        """Initialize db class variables"""
        if db_file_path is not None:
            self.connection = sqlite3.connect(db_file_path)
        else:
            self.connection = sqlite3.connect(self.db_file_path)
        self.cur = self.connection.cursor()
  
    def commit(self) -> None:
        self.connection.commit()

    def create_table(self, *args) -> None:
        self.cur.execute(args)
        self.commit()

    def __del__(self) -> None:
        self.connection.close()
        
    def execute_insert(self, data) -> None:
        self.cur.execute(data)
        self.commit()

    def executemany_insert(self, data_set) -> None:
        self.cur.executemany(data_set)
        self.commit()

    def __exit__(self, ext_type, exc_value, traceback):
        self.cur.close()
        if isinstance(exc_value, Exception):
            self.connection.rollback()
        else:
            self.connection.commit()
        self.connection.close()

def main():
    dir_name: str = os.path.dirname(__file__)
    config_file = os.path.join(dir_name, "config.toml")
    config = Config(config_file)
    config.parseConfigs()
    db_name: str = config.botname
    db_table_name: str = config.db_table_name
    db_file_path: str = os.path.join(dir_name, db_name)

if __name__ == "__main__":
    main()
